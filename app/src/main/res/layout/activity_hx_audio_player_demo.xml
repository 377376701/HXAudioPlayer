<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_hx_audio_player_demo_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical"
    android:padding="16dp">

    <ScrollView
        android:id="@+id/activity_hx_audio_main_container_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/activity_hx_audio_main_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:id="@+id/activity_hx_audio_music_list_header_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                card_view:cardBackgroundColor="@color/primaryColor"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/activity_hx_audio_music_list_header"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="MUSIC LIST"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:typeface="normal" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/activity_hx_audio_music_list_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                card_view:cardBackgroundColor="@color/primaryColor"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/activity_hx_audio_music_list_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_first_song_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/activity_hx_audio_first_song_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:src="@android:drawable/star_big_off" />

                        <TextView
                            android:id="@+id/activity_hx_audio_first_song_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Gamerstep-Bass-Triplets (Clinthammer)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="normal" />

                    </LinearLayout>

                    <View
                        android:id="@+id/activity_hx_audio_divider_1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_second_song_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/activity_hx_audio_second_song_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:src="@android:drawable/star_big_off" />

                        <TextView
                            android:id="@+id/activity_hx_audio_second_song_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="TS-Drums (Clinthammer)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/activity_hx_audio_divider_2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_third_song_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/activity_hx_audio_third_song_star"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_margin="8dp"
                            android:src="@android:drawable/star_big_off" />

                        <TextView
                            android:id="@+id/activity_hx_audio_third_song_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Time Warp Mix (The Vagrance)"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="normal" />

                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/activity_hx_audio_sound_fx_header_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="8dp"
                card_view:cardBackgroundColor="@color/primaryColor"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/activity_hx_audio_sound_fx_header"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="SOUND FX"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:typeface="normal" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/activity_hx_audio_sound_fx_card_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                card_view:cardBackgroundColor="@color/primaryColor"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/activity_hx_audio_sound_fx_container"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/primaryColor"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_first_sound_fx_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/activity_hx_audio_first_sound_fx_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="SOUND FX 1: SCI-FI 5"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <View
                        android:id="@+id/activity_hx_audio_sound_fx_divider_1"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_second_sound_fx_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/activity_hx_audio_second_sound_fx_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="SOUND FX 2: MACHINE"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="sans" />
                    </LinearLayout>

                    <View
                        android:id="@+id/activity_hx_audio_sound_fx_divider_2"
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray" />

                    <LinearLayout
                        android:id="@+id/activity_hx_audio_third_sound_fx_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/activity_hx_audio_third_sound_fx_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="SOUND FX 3: DIGITAL LIFE 1"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:typeface="sans" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/activity_hx_audio_controls_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="4dp">

        <LinearLayout
            android:id="@+id/activity_hx_audio_play_controls_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/play_button"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_media_play" />

            <ImageButton
                android:id="@+id/pause_button"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:clickable="true"
                android:src="@android:drawable/ic_media_pause" />

            <ImageButton
                android:id="@+id/stop_button"
                android:layout_width="56dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:src="@android:drawable/picture_frame" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_hx_audio_play_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/activity_hx_audio_settings_header_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                card_view:cardBackgroundColor="@color/primaryColor"
                card_view:cardCornerRadius="2dp"
                card_view:cardElevation="2dp"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true">

                <TextView
                    android:id="@+id/activity_hx_audio_settings_header"
                    android:layout_width="96dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:text="SETTINGS"
                    android:textColor="@android:color/white"
                    android:textSize="13sp"
                    android:typeface="normal" />

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/music_enable_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MUSIC ON"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <Button
                android:id="@+id/sound_enable_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="SOUND ON"
                android:textColor="@android:color/black"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
